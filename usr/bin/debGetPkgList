#!/bb/ash
# (c) Robert Shingledecker 2012
. /etc/init.d/tc-functions



TCEDIR=/etc/sysconfig/tcedir
BUILD=`getBuild`
if [ "$BUILD" == "x86" ]; then
	DEBBUILD="i386"
elif [ "$BUILD" == "armv7" ]; then
	DEBBUILD="armhf"
fi

getDeps() {
sed -n "/^Package: "$1"$/,/^$/{/./p}" "$DEBINX" > /tmp/"$1".pkglist

awk -v package="Package: $1" -v build="$DEBBUILD" -v location="/tmp/work/$1" '
BEGIN {
		RS=""
		FS="\n"
	}
	{
		if ($1 == package) {
			for (i=2; i <= NF; i++) {
				split($i,f,": ")
			
		
				if ( f[1] == "Architecture" ) {
					if ( f[2] == "all" )
						{}
					else if ( f[2] == build )
						{}
					else
						break
					}
			


				if ( f[1] == "Depends" ) {
					jmax = split(f[2],item,",")
					for (j=1; j<=jmax; j++) { 
						kmax = split(item[j],deps," ")
						print( deps[1] )
					}
				}
				if ( f[1] == "Filename" )
					print f[2] > location
						     
			
		}


		}
		
	} ' < /tmp/"$1".pkglist
	[ -f /tmp/"$1".pkglist ] && sudo rm /tmp/"$1".pkglist

}



if [ -z "$1" ]
then
	echo "you must specify a search target."
	exit 1
fi
if ls -A /opt/debextra > /dev/null 2>&1; then

  if grep "^Package: "$1"$" /tmp/debinx.* > /dev/null; then
    DEBINX=`grep -l "^Package: $1$" /tmp/debinx.* | head -n 1`
    DEPS="$(getDeps $1)"
    #[ ! -z "$DEPS" ] && echo " "
    echo "$DEPS"
    exit
  else
    DEBINX=/tmp/debinxdep
    DEPS="$(getDeps $1)"
    [ -z "$DEPS" ] && exit 1
    echo "$DEPS"
  fi
  

else
    DEBINX=/tmp/debinxdep
    DEPS="$(getDeps $1)"
    [ -z "$DEPS" ] && exit 1
    echo "$DEPS"
fi

